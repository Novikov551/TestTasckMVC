@model List<Position>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <dib class="col-6 text-start">
            <h2>
                <a class="btn btn-primary" asp-area="" asp-controller="Pages" asp-action="GetPositions">Show positions</a>
            </h2>
        </dib>
        <dib class="col-6 text-end">
            <h2>
                <a class="btn btn-primary" asp-area="" asp-controller="Pages" asp-action="GetEmployees">Show employees</a>
            </h2>
        </dib>
    </div>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Position id
                </th>
                <th>
                    Position name
                </th>
                <th>
                    Number of employees holding the position
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th width=30%>
                        @item.Id
                    </th>
                    <th width=30%>
                        @item.Name
                    </th>
                    <th width=30%>
                        @item.Employees.Count
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>

